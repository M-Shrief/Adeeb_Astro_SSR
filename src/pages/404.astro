---
// Layout
import Layout from "../layouts/Layout.astro";
// Utils
import {getLangFromUrl} from '../i18n/utils'
// UI
import { ui } from '../i18n/ui'

const currentLocale = getLangFromUrl(Astro.url)
---

<Layout title={ui[currentLocale][404].layoutTitle} description={ui[currentLocale][404].layoutDesc}>
  <h1>{ui[currentLocale][404].h1}</h1>
  <p>{ui[currentLocale][404].p} <a href="/">{ui[currentLocale][404].a}</a></p>
</Layout>

<style lang="scss">
  h1,
  p {
    color: var(--text1);
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
  }

  a {
    // text-decoration: none;
    text-decoration: underline;
    color: var(--text2);
    &:hover {
      color: var(--text1);
    }
  }
</style>
